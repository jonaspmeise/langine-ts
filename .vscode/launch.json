{
    "version": "0.2.0",
    "configurations": [
      {
        "name": "Debug Tests",
        "type": "node",
        "request": "launch",
        "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
        "args": [
          "--require",
          "ts-node/register",
          "${workspaceFolder}/tests/**/*.spec.ts",
        ],
        "runtimeArgs": ["--nolazy"],
        "sourceMaps": true,
        "cwd": "${workspaceFolder}",
        "internalConsoleOptions": "openOnSessionStart"
      }
    ]
}